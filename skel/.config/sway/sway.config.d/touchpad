input "type:touchpad" {
  pointer_accel 0.0
  natural_scroll enabled
  scroll_factor 0.5
  scroll_method two_finger
  left_handed disabled
  tap enabled
  tap_button_map lrm
  drag enabled
  drag_lock disabled
  dwt enabled
  middle_emulation enabled
}

############    gestures with touchpad   ############

bindgesture swipe:4:right workspace prev
bindgesture swipe:4:left workspace next
bindgesture swipe:3:right exec sudo ydotool key 56:1 105:1 105:0 56:0
bindgesture swipe:3:left exec sudo ydotool key 56:1 106:1 106:0 56:0
