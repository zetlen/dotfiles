#!/bin/sh

set_sound() {
    if [[ "$1" == "" ]]; then
        if [ "$(osascript -e 'return output muted of (get volume settings)')" = "false" ]; then
            echo "ğŸ”‰ sound is unmuted"
        else
            echo "ğŸ”‡ sound now muted"
        fi
        return
    fi

    case "$1" in
    on)
        osascript -e "set volume without output muted"
        echo "ğŸ”‰ sound is now unmuted"
        ;;
    off)
        osascript -e "set volume with output muted"
        echo "ğŸ”‡ sound is now muted"
        ;;
    *)
        echo "Usage: 'sound' to report mute status, 'sound off' to mute, 'sound on' to unmute"
        return 1
        ;;
    esac
}

set_sound $@
